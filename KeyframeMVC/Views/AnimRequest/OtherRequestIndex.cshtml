@model IEnumerable<Keyframe.Models.AnimRequestModels.AnimRequestListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Pending Requests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePosted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCompleted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RequestId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePosted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCompleted)
        </td>
        <td>
            @Html.ActionLink("Accept Request", "AcceptRequest", new { requestId = item.RequestId, profileId = item.RequestId }) |
            @Html.ActionLink("Details", "Details", new { id = item.RequestId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RequestId })

        </td>
    </tr>
}

</table>
