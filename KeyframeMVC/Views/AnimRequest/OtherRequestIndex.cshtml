@model IEnumerable<Keyframe.Models.AnimRequestModels.AnimRequestListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Pending Requests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePosted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCompleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="card text-center border-primary border-2">
                    <div class="card-header">
                        @Html.DisplayFor(modelItem => item.Title)
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">General discription</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.RequestId)</p>
                        @Html.ActionLink("Accept Request", "AcceptRequest", "UserProfile", new { requestId = item.RequestId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details", new { id = item.RequestId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.RequestId }, new { @class = "btn btn-primary" })
                    </div>
                    <div class="card-footer text-muted">
                        @Html.DisplayFor(modelItem => item.DatePosted)
                    </div>
                </div>
            </td>
        </tr>
    }

</table>


