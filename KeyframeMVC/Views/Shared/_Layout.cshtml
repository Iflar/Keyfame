                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li>@Html.ActionLink("Create User", "Create", "UserProfile")</li> |
                    <li>@Html.ActionLink("My Profile", "Index", "UserProfile")</li> |
                    <li>@Html.ActionLink("Requests Made", "Index", "AnimRequest")</li> |
                    <li>@Html.ActionLink("Avalible Requests", "OtherRequestIndex", "AnimRequest")</li> |
                    <li>@Html.ActionLink("Accepted Requests", "AcceptedRequests", "AnimRequest")</li> |
                    <li>@Html.ActionLink("Request Animation", "Create", "AnimRequest")</li>
                </ul>
            </div>
        </div>
        @Html.Partial("_LoginPartial") 
    </nav>

